{% extends "_layout/base.njk" %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">
				{% block content %}{% endblock %}
			</div>
		</div>
	</div>
	<img class="bg-img" src="/img/auth-bg.png" style="">
{% endblock %}

{% block style %}
	<style>
		.logo {
			max-height: 25px;
			margin: 1em auto;
			display: block;
		}

		.container {
			z-index: 100;
			margin-bottom: 12em;
		}

		body {
			display: grid;
			place-items: center;
		}

		.bg-img {
			max-width: 300px;
			position: absolute;
			right: 0;
			bottom: 10px;
			opacity: 0.6;
		}
	</style>
{% endblock %}

