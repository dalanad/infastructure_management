{% extends "./base.njk" %}

{%- block body -%}
    {% include "_layout/header.njk" %}
    <div style="display:flex;height: calc(100% - 40px);">
        <div class="sidebar"   data-turbo-frame="admin_body">
            <div class="nav-list">
                {% for item in sidebar %}
                    <div class="nav-item{{ " active" if item.active }}">
                        <a class="nav-link{{ " collapsed" if not item.active and item.links }}"
                           href="{{ item.href }}"><i class="fa {{ item.icon }} nav-icon"></i><span
                                    class="nav-link-text">{{ item.label }}</span></a>
                        {% if item.links %}
                            <div class="font-weight-normal sub-list">
                                {% for link in item.links %}
                                    <a class="nav-item {{ "active" if link.active }}"
                                       href="{{ link.href }}">{{ link.label }}</a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="w-100 overflow-auto  " style=" --animate-duration: 0.1s;">
            <turbo-frame id="{{ frame if frame else "admin_body" }}">
                {%- block content -%}{%- endblock -%}
            </turbo-frame>
        </div>

    </div>

{%- endblock -%}