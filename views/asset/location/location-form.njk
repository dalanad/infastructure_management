{% extends "_layout/admin-base.njk" %}
{% import "macros.njk" as "m"  with context %}

{% block content %}
    {{ m.page_header("Asset Location") }}
    <form action="" method="post" class="mx-3">
        <div class="row g-2">
            <div class="col-lg-3 col-md-6 col-sm-12 field">
                <label>Name</label>
                <input class="ctrl" name="name" value="{{ name }}" required>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 field">
                <label>Floor</label>
                <input class="ctrl" name="floor" value="{{ floor }}" required>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 field">
                <label>Wing</label>
                <input class="ctrl" name="wing" value="{{ wing }}" required>
            </div>
             <div class="col-lg-3 col-md-6 col-sm-12 field">
                <label>Parent Location</label>
                <select name="parent" data-allow-clear="true" data-selected="{{ parent.id }}" class="init-select" data-url="/assets/parent-location/options/"></select>
            </div>
        </div>
        <button type="submit" class="btn mt-3">Submit</button>
        <a type="button" class="btn outline danger mt-3" href="/assets/location/">Back</a>
    </form>
{% endblock %}