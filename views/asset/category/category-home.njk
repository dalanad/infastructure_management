{% extends "_layout/admin-base.njk" %}
{% import "macros.njk" as "m" with context %}
{% block content %}
    {% call m.page_header("Assets Catogories") %}
    <a class="btn btn-primary float-end" href="create">New Category</a>
    {% endcall %}
    <div>
        <table class="table paded" role="grid">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">computer</th>
                    <th scope="col">network</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id  }}</td>
                        <td>{{ item.name  }}</td>
                        <td>{{ tag("bool", item.computer) }}</td>
                        <td>{{ tag("bool", item.networked) }}</td>
                        <td><a class="btn link" href="{{ item.id }}/edit/"> Edit </a> | 
                        <a class="btn link danger" href="{{ item.id }}/delete/"> Delete </a></td>
         
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% include "../../_layout/paginate.njk" %}
{% endblock %}