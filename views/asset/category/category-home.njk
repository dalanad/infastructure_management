{% extends "layout/admin-base.njk" %}

{% block content %}
    <h2 class="mb-3">Assets Catogories
    <a class="btn btn-primary float-end" href="create">New Category</a>
    </h2>

    <div>
        <table class="table" role="grid">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">computer</th>
                    <th scope="col">network</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.id  }}</td>
                        <td>{{ item.name  }}</td>
                        <td>{{ tag("bool", item.computer) }}</td>
                        <td>{{ tag("bool", item.networked) }}</td>
                        <td>
                            <a href="edit/{{ item.id }}"> Edit </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% include "../../layout/paginate.njk" %}
{% endblock %}