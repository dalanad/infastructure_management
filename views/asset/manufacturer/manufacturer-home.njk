{% extends "_layout/admin-base.njk" %}
{% import "macros.njk" as "m" with context %}
{% block content %}
 
{% call m.page_header("Assets Manufacturers") %}    
    <a class="btn btn-primary float-end" href="create">New Manufacturer</a>
{% endcall %}
<div>
    {% for msg in success_flash %}
        <div class="alert success"><i class="fas fa-check-circle"></i> &nbsp; {{msg}} </div> 
    {% endfor %}
</div>

<div>
    <table class="table paded" role="grid">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
            <tr>
                <td>{{ item.id  }}</td>
                <td>{{ item.name  }}</td>
                <td><a class="btn link" href="{{ item.id }}/edit/"> Edit </a> | <a class="btn link danger" confirm-action href="{{ item.id }}/delete/"> Delete </a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% include "../../_layout/paginate.njk" %}
{% endblock %}